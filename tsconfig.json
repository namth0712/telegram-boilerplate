{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "moduleResolution": "node",
    "module": "commonjs",
    "noImplicitAny": true,
    "pretty": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test"]
}

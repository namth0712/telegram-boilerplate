{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["ES2018", "esnext.asynciterable"],
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "moduleResolution": "node",
    "module": "commonjs",
    "noImplicitAny": true,
    "pretty": true,
    "sourceMap": true,
    "outDir": "build",
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "tests"]
}
